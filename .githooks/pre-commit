#!/bin/sh

# File to check
TARGET_FILE="main/include/wifi_credentials.h"

# Check if the file is staged
if git diff --cached --name-only | grep -q "$TARGET_FILE"; then
    echo "⚠️  WARNING: You are about to commit $TARGET_FILE!"
    echo "   This file may contain sensitive data."
    echo "   Consider removing it from the commit or use git update-index --assume-unchanged."
    echo ""
    exit 1
fi

